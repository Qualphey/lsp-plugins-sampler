<plugin resizable="true">
	<hbox>
		<grid rows="2" cols="2" spacing="4" transpose="true">
			<group text="groups.midi_setup">
				<grid rows="3" cols="6" hspacing="4">
					<label text="labels.channel"/>
					<label text="labels.mus.note"/>
					<label text="labels.muting"/>
					<hbox spacing="4" fill="false">
						<button id="noff" led="true" ui:inject="Button_green" size="12"/>
						<label text="labels.midi.note_off"/>
					</hbox>
					<label text="labels.midi.midi_num"/>
					<label text="labels.muting"/>

					<combo id="chan" halign="1" fill="true"/>
					<hbox fill="true" spacing="2">
						<combo id="note" fill="true"/>
						<combo id="oct" fill="true"/>
					</hbox>
					<button id="muting" size="24" color="yellow" led="true"/>
					<knob id="fout" size="20"/>
					<midinote id="mn" note_id="note" octave_id="oct" text_color="green"/>
					<button id="mute" size="32"/>

					<label/>
					<label/>
					<label/>
					<value id="fout" same_line="true"/>
					<label/>
					<led id="mute" color="red"/>
				</grid>
			</group>
			<cgroup id="ssel" expand="true" active="0">
				<vbox>
					<!-- File editor -->
					<asample
						expand="true"
						id="sf[ssel]"
						mesh_id="fd[ssel]"
						path_id="_ui_dlg_sample_path"
						hcut=":hc[ssel]"
						tcut=":tc[ssel]"
						fadein=":fi[ssel]"
						fadeout=":fo[ssel]"
						length=":fl[ssel]"
						status=":fs[ssel]"
						width.min="320"
						height.min="160"
						clipboard.head_cut="hc[ssel]"
						clipboard.tail_cut="tc[ssel]"
						clipboard.fade_in="fi[ssel]"
						clipboard.fade_out="fo[ssel]"
						clipboard.makeup="mk[ssel]"
						clipboard.predelay="pd[ssel]"/>

					<grid rows="3" cols="8" spacing="2">
						<label text="labels.sedit.reverse"/>
						<label text="labels.sedit.head_cut"/>
						<label text="labels.sedit.tail_cut"/>
						<label text="labels.sedit.fade_in"/>
						<label text="labels.sedit.fade_out"/>
						<label text="labels.sedit.makeup"/>
						<label text="labels.sedit.predelay"/>
						<label text="labels.sedit.listen"/>

						<button id="rs[ssel]" size="32"/>
						<knob id="hc[ssel]" size="20"/>
						<knob id="tc[ssel]" size="20"/>
						<knob id="fi[ssel]" size="20" scale_color="yellow"/>
						<knob id="fo[ssel]" size="20" scale_color="yellow"/>
						<knob id="mk[ssel]" size="20"/>
						<knob id="pd[ssel]" size="20"/>
						<button id="ls[ssel]" size="32" toggle="false"/>

						<led id="rs[ssel]"/>
						<value id="hc[ssel]"/>
						<value id="tc[ssel]"/>
						<value id="fi[ssel]"/>
						<value id="fo[ssel]"/>
						<value id="mk[ssel]"/>
						<value id="pd[ssel]"/>
						<led id="ls[ssel]"/>
					</grid>
				</vbox>
			</cgroup>
			<group text="groups.audio_channels">
				<grid rows="3" cols="5">
					<label text="labels.dynamics"/>
					<label text="labels.time_drifting"/>
					<label text="labels.signal.dry"/>
					<label text="labels.signal.wet"/>
					<label text="labels.output"/>

					<knob id="dyna" scale_color="green"/>
					<knob id="drft" scale_color="green"/>
					<knob id="dry"/>
					<knob id="wet"/>
					<knob id="g_out"/>

					<value id="dyna"/>
					<value id="drft"/>
					<value id="dry"/>
					<value id="wet"/>
					<value id="g_out"/>
				</grid>
			</group>
			<group text="groups.sample_matrix" expand="true">
				<!-- Sample matrix -->
				<grid rows="11" cols="9" transpose="true">
					<label text="labels.sedit.sample_num" fill="true" halign="0"/>
					<label text="labels.sedit.enabled" fill="true" halign="0"/>
					<label text="labels.sedit.active" fill="true" halign="0"/>
					<label text="labels.midi.velocity" fill="true" halign="0"/>
					<label text="labels.units.:pc" fill="true" halign="0"/>
					<label text="labels.signal.pan_left" fill="true" halign="0"/>
					<label text="labels.units.:pc" fill="true" halign="0"/>
					<label text="labels.signal.pan_right" fill="true" halign="0"/>
					<label text="labels.units.:pc" fill="true" halign="0"/>
					<label text="labels.sedit.listen" fill="true" halign="0"/>
					<label text="labels.midi.note_on" fill="true" halign="0"/>

					<ui:for id="i" first="0" last="7">
						<label text="${i}"/>
						<button id="on_${i}" size="16" color="yellow" led="true"/>
						<led id="ac_${i}" color="yellow" size="6"/>
						<knob id="vl_${i}" size="20" scale_color="magenta"/>
						<value id="vl_${i}" detailed="false"/>
						<knob id="pl_${i}" size="20" balance="0.5" scale_color="red"/>
						<value id="pl_${i}" detailed="false"/>
						<knob id="pr_${i}" size="20" balance="0.5" scale_color="cyan"/>
						<value id="pr_${i}" detailed="false"/>
						<button id="ls_${i}" size="32" toggle="false"/>
						<led id="no_${i}"/>
					</ui:for>
				</grid>
			</group>
		</grid>
	</hbox>

	<hbox>
		<grid rows="2" cols="2" spacing="4" transpose="true">
			<!-- Midi settings -->
			<group text="groups.midi_setup" bg.color="bg" spacing="4" ipadding="0">
				<grid rows="2" cols="7" hspacing="2">

					<cell rows="2">
						<grid rows="3" cols="1" vspacing="2">
							<grid rows="2" cols="3" spacing="0">
								<ui:attributes padding.left="6" padding.right="6" bg.color="bg_schema">
									<label text="labels.channel"/>
									<label text="labels.mus.note"/>
									<label text="labels.mus.octave"/>
									<combo id="chan" fill="true"/>
									<combo id="note" fill="true"/>
									<combo id="oct" fill="true"/>
								</ui:attributes>
							</grid>
							<cell>
								<hsep/>
							</cell>
							<hbox bg.color="bg_schema">
								<label text="labels.midi.midi_num" padding.left="6" padding.right="6"/>
								<midinote id="mn" note_id="note" octave_id="oct" pointer="vsize"/>
								<label expand="true"/>
							</hbox>
						</grid>
					</cell>
					<cell rows="2">
						<vsep/>
					</cell>
					<label text="labels.muting" bg.color="bg_schema" padding.left="6" padding.right="6"/>
					<cell rows="2">
						<vsep/>
					</cell>
					<hbox spacing="4" fill="false" bg.color="bg_schema" padding.left="6" padding.right="6">
						<button id="noff" led="true" ui:inject="Button_green" size="12" padding.right="6"/>
						<label text="labels.midi.note_off"/>
					</hbox>
					<cell rows="2">
						<vsep/>
					</cell>
					<label text="labels.mute" bg.color="bg_schema" padding.left="6" padding.right="6"/>
					<button id="muting" size="24" ui:inject="Button_yellow" led="true" bg.color="bg_schema"/>
					<cell>
						<vbox bg.color="bg_schema" padding.left="6" padding.right="6">
							<knob id="fout" size="20"/>
							<value id="fout" same_line="true"/>
						</vbox>
					</cell>
					<button id="mute" ui:inject="Button_red" size="24" bg.color="bg_schema"/>
				</grid>
			</group>

			<cgroup id="ssel" expand="true" active="0">
				<vbox>
					<!-- File editor -->
					<asample
						expand="true"
						id="sf[ssel]"
						mesh_id="fd[ssel]"
						path_id="_ui_dlg_sample_path"
						hcut=":hc[ssel]"
						tcut=":tc[ssel]"
						fadein=":fi[ssel]"
						fadeout=":fo[ssel]"
						length=":fl[ssel]"
						status=":fs[ssel]"
						width.min="320"
						height.min="160"
						clipboard.head_cut="hc[ssel]"
						clipboard.tail_cut="tc[ssel]"
						clipboard.fade_in="fi[ssel]"
						clipboard.fade_out="fo[ssel]"
						clipboard.makeup="mk[ssel]"
						clipboard.predelay="pd[ssel]"/>

					<grid rows="3" cols="8" spacing="2">
						<label text="labels.sedit.reverse"/>
						<label text="labels.sedit.head_cut"/>
						<label text="labels.sedit.tail_cut"/>
						<label text="labels.sedit.fade_in"/>
						<label text="labels.sedit.fade_out"/>
						<label text="labels.sedit.makeup"/>
						<label text="labels.sedit.predelay"/>
						<label text="labels.sedit.listen"/>

						<button id="rs[ssel]" size="32"/>
						<knob id="hc[ssel]" size="20"/>
						<knob id="tc[ssel]" size="20"/>
						<knob id="fi[ssel]" size="20" scale_color="yellow"/>
						<knob id="fo[ssel]" size="20" scale_color="yellow"/>
						<knob id="mk[ssel]" size="20"/>
						<knob id="pd[ssel]" size="20"/>
						<button id="ls[ssel]" size="32" toggle="false"/>

						<led id="rs[ssel]"/>
						<value id="hc[ssel]"/>
						<value id="tc[ssel]"/>
						<value id="fi[ssel]"/>
						<value id="fo[ssel]"/>
						<value id="mk[ssel]"/>
						<value id="pd[ssel]"/>
						<led id="ls[ssel]"/>
					</grid>
				</vbox>
			</cgroup>
			<group text="groups.audio_channels" ipadding="4" >
				<grid rows="3" cols="5" spacing="6">
					<label text="labels.dynamics"/>
					<label text="labels.time_drifting"/>
					<label text="labels.signal.dry"/>
					<label text="labels.signal.wet"/>
					<label text="labels.output"/>

					<knob id="dyna" scale_color="green"/>
					<knob id="drft" scale_color="green"/>
					<knob id="dry"/>
					<knob id="wet"/>
					<knob id="g_out"/>

					<value id="dyna" same_line="true"/>
					<value id="drft" same_line="true"/>
					<value id="dry" same_line="true"/>
					<value id="wet" same_line="true"/>
					<value id="g_out" same_line="true"/>
				</grid>
			</group>
			<group text="groups.sample_matrix" expand="true">
				<!-- Sample matrix -->
				<grid rows="11" cols="9" transpose="true">
					<label text="labels.sedit.sample_num" fill="true" halign="0"/>
					<label text="labels.sedit.enabled" fill="true" halign="0"/>
					<label text="labels.sedit.active" fill="true" halign="0"/>
					<label text="labels.midi.velocity" fill="true" halign="0"/>
					<label text="labels.units.:pc" fill="true" halign="0"/>
					<label text="labels.signal.pan_left" fill="true" halign="0"/>
					<label text="labels.units.:pc" fill="true" halign="0"/>
					<label text="labels.signal.pan_right" fill="true" halign="0"/>
					<label text="labels.units.:pc" fill="true" halign="0"/>
					<label text="labels.sedit.listen" fill="true" halign="0"/>
					<label text="labels.midi.note_on" fill="true" halign="0"/>

					<ui:for id="i" first="0" last="7">
						<label text="${i}"/>
						<button id="on_${i}" size="16" color="yellow" led="true"/>
						<led id="ac_${i}" color="yellow" size="6"/>
						<knob id="vl_${i}" size="20" scale_color="magenta"/>
						<value id="vl_${i}" detailed="false"/>
						<knob id="pl_${i}" size="20" balance="0.5" scale_color="red"/>
						<value id="pl_${i}" detailed="false"/>
						<knob id="pr_${i}" size="20" balance="0.5" scale_color="cyan"/>
						<value id="pr_${i}" detailed="false"/>
						<button id="ls_${i}" size="32" toggle="false"/>
						<led id="no_${i}"/>
					</ui:for>
				</grid>
			</group>
		</grid>
	</hbox>

</plugin>
